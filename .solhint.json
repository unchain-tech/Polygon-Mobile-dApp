{
  "extends": "solhint:recommended",
  "plugins": [],
  "rules": {
    "compiler-version": ["error", ">=0.8.19"],
    "custom-errors": "off",
    "func-visibility": [
      "error",
      {
        "ignoreConstructors": true
      }
    ],
    "no-global-import": "off",
    "private-vars-leading-underscore": [
      "error",
      {
        "strict": false
      }
    ],
    "state-visibility": "error"
  }
}